Algoritmo "lista_1_exercicio_3"

Var

   base, altura, area: real

Inicio

      escreval("Vamos calcula a area de um triangulo")
      escreval("Digite o valor da Base ")
      leia(base)
      escreval("Digite o valor da Altura ")
      leia(altura)
      
      area <- (base*altura)/2
      
      escreval("")
      escreval("A area calculada é: ", area:10:2)


Fimalgoritmo