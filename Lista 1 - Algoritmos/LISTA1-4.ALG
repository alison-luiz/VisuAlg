Algoritmo "lista_1_exercicio_4"

Var

   area, raio: real


Inicio

      escreval("Vamos calcular a area de um circulo")
      escreval("Digite o raio do circulo ")
      leia(raio)
      
      area <- 3.1416 * (raio * raio)
      
      escreval("")
      escreval("O valor calculado para area do circulo é: ", area:10:2)


Fimalgoritmo